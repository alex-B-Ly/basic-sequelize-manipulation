<div class="row">
  <div class="col-md-6">
    <h1>Make Note</h1>
    <form action="/entry" method="post">
      <div class="form-group">
        <label for="nameInput">Name</label>
        <input type="" class="form-control" id="nameInput" placeholder="Title" name="name">
      </div>
      <br>
      <div class="form-group">
        <label for="phoneInput">Phone</label>
        <input type="" class="form-control" id="phoneInput" placeholder="Text" name="phone">
      </div>
      <br>
      <div class="form-group">
        <label for="messageInput">Message</label>
        <textarea class="form-control" id="messageInput" placeholder="Text" name="message"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>

<br>
<div class="row">
  <div class="col-md-12">
      {{#each results}}
        <div>
          {{title}}
          <br>
          {{body}}
        </div>
        <br>
        <br>
      {{/each}}
  </div>

</div>
